version: '2'

services:
  db:
    image: mysql:5.7
    ports:
      - 3306:3306
    environment:
      - MYSQL_ROOT_PASSWORD=root
      - MYSQL_DATABASE=symfony
      - MYSQL_USER=symfony
      - MYSQL_PASSWORD=symfony
  app:
    build:
        context: .
        dockerfile: Dockerfile.dev
    depends_on:
      - db
    ports:
      - 80:80
    volumes:
        - ~/.composer:/root/.composer
    environment:
      - VIRTUAL_HOST=localhost